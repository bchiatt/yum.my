h3 {{title}}

.row
  .col-xs-3
    form(role='form', novalidate, name='registerForm')
      .form-group
        label(for='email') Email
        input.form-control#email(required, ng-model='user.email', type='email', name='email', autofocus)
      .form-group
        label(for='password') Password
        input.form-control#password(required, ng-model='user.password', type='password', name='password', ng-minlength='3')
      button.btn.btn-primary(type='submit', ng-show='registerForm.$valid', ng-click='register()') Register
  .col-xs-9
